{
  "name": "sendit",
  "version": "1.0.0",
  "description": "SendIT is a courier service that helps users deliver parcels to different destinations, and it  provides courier quotes based on weight categories. It uses the popular JavaScript runtime environment, NodeJs and runs express at the backend. All codes are written in ES6 syntax and transpiled using the BabelCLI to a preset ES2015.",
  "main": "app.js",
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "clear && NODE_ENV=test nyc --reporter=text --reporter=lcov mocha --timeout 25000 --require babel-register {src,src/test/**}/*.spec.js --exit || true",
    "server": "clear && cross-env NODE_ENV=dev nodemon --exec babel-node ./src/app.js",
    "start": "nodemon --exec babel-node src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeveloperNuel/SendIT.git"
  },
  "author": "\"Emmanuel TUYISHIMIRE\"",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DeveloperNuel/SendIT/issues"
  },
  "homepage": "https://github.com/DeveloperNuel/SendIT#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-install": "2.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^3.0.2",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "express": "^4.16.4",
    "mocha": "^5.2.0"
  }
}
